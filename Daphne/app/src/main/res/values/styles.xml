<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/text</item>
    </style>

    <style name="Material" parent="AppTheme">
        <item name="android:listDivider">@drawable/item_divider</item>
        <item name="drawerArrowStyle">@style/MaterialDrawer.DrawerArrowStyle</item>
    </style>

    <style name="Material.Splash" parent="Material">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <style name="Material.Layout" parent="Material">

    </style>

    <style name="Material.NavigationMenu" parent="Material">
        <!-- Font -->
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:padding">24dp</item>
        <!-- Dimens -->

        <item name="android:textSize">@dimen/navigation_text_size</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0dp</item>
        <item name="android:colorBackground">@color/divider</item>
    </style>

    <style name="Material.NavigationMenu.ListView" parent="Material.NavigationMenu">
        <item name="android:layout_margin">@dimen/navigation_drawable_margin</item>
    </style>

    <style name="Material.NavigationMenu.Drawable" parent="Material.NavigationMenu">
        <item name="android:layout_marginLeft">@dimen/navigation_drawable_margin</item>
        <item name="android:layout_marginRight">@dimen/navigation_drawable_margin</item>
    </style>

    <style name="Material.Toolbar" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="Material.Toolbar.TabLayout" parent="Material.Toolbar">

    </style>

    <style name="Material.HintText" parent="@android:style/TextAppearance">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorHint">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
        <!-- colorControlActivated & colorControlHighlight use the colorAccent color by default -->
    </style>

    <style name="Material.HintText.Error">
        <item name="android:colorAccent">@color/primary</item>
        <item name="android:textColorHint">@color/primary_dark</item>
        <item name="android:textSize">16sp</item>
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorControlHighlight">@color/primary</item>
    </style>

    <style name="MaterialDrawer.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">false</item>
        <item name="color">@android:color/white</item>
    </style>
</resources>
