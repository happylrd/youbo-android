<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_card_header"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/Material.Card.Header"
    >

    <ImageView
        android:id="@+id/header_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:cropToPadding="false"
        android:scaleType="fitStart"
        android:src="@mipmap/place_holder" />
    <TextView
        android:id="@+id/header_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Material.Card.Text.Primary.Background"
        android:layout_above="@+id/header_subheader"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/header_subheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Material.Card.Text.Secondary.Background"
        android:paddingBottom="16dp"
        android:layout_alignBottom="@+id/header_background"
        android:layout_alignParentStart="true" />
</RelativeLayout>