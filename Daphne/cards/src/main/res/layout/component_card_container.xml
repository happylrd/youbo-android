<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/component_card_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <TextView
        android:text="@string/app_name"
        android:id="@+id/header_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Material.Card.Text.Primary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="@string/app_name"
        android:id="@+id/container_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        style="@style/Material.Card.Text.Secondary"
        android:layout_alignBaseline="@+id/header_header"
        android:layout_alignBottom="@+id/header_header"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/header_header" />

    <TextView
        android:text="@string/app_name"
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_header"
        style="@style/Material.Card.Text"
        />
</RelativeLayout>